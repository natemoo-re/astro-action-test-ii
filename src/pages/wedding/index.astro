---
const weddingUrl = `https://www.svt.se`;
const speechUrl = `https://sverigesradio.se`;
const locationUrl = `https://maps.app.goo.gl/oihr2LeWHCzLMc5A6`;
import weddingImage from "../../images/wedding.jpg";
import { Image } from 'astro:assets';
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Snart blire bröllop!" includeSidebar={false}>
	<div class="text-center">
		<section>
			<h1 class="text-4xl font-bold mb-2">💍 Bröllop 🥂</h1>
			<Image class="mx-auto mb-2" src={weddingImage} width="200" height="280" alt="Emine & Olle at the location 5 years ago"/>
			<h1 class="text-4xl font-bold mb-2">25/5-24</h1>
			<h3 class="text-2xl font-bold mb-2">Klockan 17:00</h3>
			<a class="btn btn-accent mt-9" href=`${weddingUrl}`>Anmäl dig till bröllopet här! 🥳</a>
			<br />
			<a class="btn btn-info mt-9" href=`${speechUrl}`>Vill du tala på bröllopet? Klicka här 🤩</a>
			<br />
			<a class="btn btn-success mt-9" href=`${locationUrl}`>Hitta till bröllopet 🗺</a>
		</section>
	</div>
</BaseLayout>